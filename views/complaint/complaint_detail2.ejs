<%- layout('../layout') %>

<script>
    function send(e){
        var frm = document.createElement('form');

        var hid = document.getElementById('hid'); //no
        var email = document.getElementById('customer_email');

        frm.setAttribute('method', 'post');
        frm.setAttribute('action', '/AS/complete');

        hid.setAttribute('name', 'no');
        email.setAttribute('name', 'customer_email');

        frm.appendChild(hid);
        frm.appendChild(email);
        frm.submit();
    }
</script>

