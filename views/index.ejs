<!DOCTYPE html>
<html>
<head>
    <title></title>
    <meta charset="utf-8">
    <link href="/bootstrap-2.3.2/docs/assets/css/bootstrap.css" rel="stylesheet">
    <link href="/bootstrap-2.3.2/docs/assets/css/bootstrap-responsive.css" rel="stylesheet">
    <link href="/jquery/jquery-ui.min.css" rel="stylesheet">
    <link href="/jquery/jquery-ui.structure.min.css" rel="stylesheet">
    <link href="/jquery/jquery-ui.theme.min.css" rel="stylesheet">


    <!--full calendar-->
    <link href="/fullcalendar-3.1.0/fullcalendar.css" rel="stylesheet">
    <!--<link href="/fullcalendar-3.1.0/fullcalendar.min.css" rel="stylesheet">-->

    <script src="/jquery/jquery-3.1.1.js"></script>
    <script src="/jquery/jquery-ui.min.js"></script>

    <!--full calendar js file-->
    <!--<script src="/fullcalendar-3.1.0/lib/jquery.min.js"></script>-->
    <script src="/fullcalendar-3.1.0/lib/moment.min.js"></script>
    <script src="/fullcalendar-3.1.0/fullcalendar.js"></script>
    <script src="/fullcalendar-3.1.0/locale/ko.js"></script>
    <!--<script src="/fullcalendar-3.1.0/fullcalendar.min.js"></script>-->

    <style>
        html, body{
            height:100%;
            font-family: '맑은고딕';
        }
        .as_list_tr:hover{
            background-color: #c09853;
            cursor: pointer;
        }
        .fc-sun {color:#e31b23} /* fullcalendar 일요일 */
        .fc-sat {color:#007dc3} /* fullcalendar 토요일 */

        .fc-day-number.fc-sat.fc-past { color:#0000FF; }
        .fc-day-number.fc-sun.fc-past { color:#FF0000; }
    </style>
</head>
<body>


<table style="position:relative; top:20%" align="center" width="40%" height="50%" border="1">
    <tr>
        <td align=center colspan="2"><img src="images/login_logo.jpg" style="width:100%;height:100%"></td>
    </tr>
    <tr>
        <td align=center colspan="2"><img src="images/login_logo2.jpg" style="width:100%;height:100%"></td>
    </tr>
    <form action="/login" method="post" style="width: 100%;height: 100%">
        <tr>
            <td width=50% align="center"><label class="custom-control custom-radio">사용자&nbsp;<input type="radio" name="userType" value="member" class="custom-control-input" checked="checked"></label></td>
            <td width=50% align="center"><label class="custom-control custom-radio">A/S담당자&nbsp;<input type="radio" name="userType" value="admin"></label></td>
        </tr>
        <tr>
            <td style="width:50%" align=center>아이디</td>
            <td><input type='text' name="id" style="width:90%"></td>
        </tr>
        <tr>
            <td style="width:50%" align=center>비밀번호</td>
            <td><input type="password" name="password" style="width:90%"></td>
        </tr>
        <tr style="height:40px">
            <td colspan="2" align="center"><input style="width:50%" type="submit" value='로그인' class="btn btn-lg btn-success"></td>
        </tr>
    </form>
</table>
<input type="hidden" id="errorMessage" name="errorMessage" value="<%=errorMessage%>">
<script>
    var errMsg = document.getElementById('errorMessage');
    if(errMsg.value=='id'){
        alert('id를 확인하세요!!');
    }else if(errMsg.value=='pwd'){
        alert('비밀번호를 확인하세요!!');
    }else if(errMsg.value=='login_requirement'){
        alert('로그인이 필요합니다!!');
    }
</script>

</body>
</html>
